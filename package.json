{
  "name": "resource-forum",
  "version": "1.0.0",
  "description": "带资源共享功能的轻量级论坛系统",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "cleancss -o dist/styles.min.css styles.css",
    "build:js": "uglifyjs script.js -o dist/script.min.js",
    "deploy": "npm run build && vercel --prod"
  },
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4"
  }
}
